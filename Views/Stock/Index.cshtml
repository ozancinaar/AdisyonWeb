@model IEnumerable<AdisyonWeb.Entities.MenuItem>

    @{
    ViewData["Title"] = "Stok Yönetimi";

    var grouped = Model
        .OrderBy(m => m.Category.Name)
        .ThenBy(m => m.Name)
        .GroupBy(m => m.Category.Name);
    }

    <div class="d-flex justify-content-between align-items-center mb-3">
        <div>
            <h2 class="mb-0">Stok Yönetimi</h2>
            <small class="text-muted">
                Menüdeki tüm ürünlerin stok miktarlarýný buradan hýzlýca güncelleyebilirsiniz.
            </small>
        </div>

        <div class="text-end">
            <span class="badge bg-light text-dark border">
                Toplam ürün: @Model.Count()
            </span>
        </div>
    </div>

    <div class="alert alert-light border d-flex align-items-center gap-3 py-2">
        <strong class="me-2">Stok Durumu:</strong>
        <span class="badge bg-success">Yüksek (&gt; 30)</span>
        <span class="badge bg-warning text-dark">Orta (11 - 30)</span>
        <span class="badge bg-danger">Düþük (0 - 10)</span>
    </div>

    <div class="accordion" id="stockAccordion">
        @foreach (var group in grouped)
    {
        var key = group.Key
            .Replace(" ", "")
            .Replace("ý", "i")
            .Replace("Ý", "I")
            .Replace("ç", "c")
            .Replace("Ç", "C")
            .Replace("þ", "s")
            .Replace("Þ", "S")
            .Replace("ð", "g")
            .Replace("Ð", "G")
            .Replace("ö", "o")
            .Replace("Ö", "O")
            .Replace("ü", "u")
            .Replace("Ü", "U");

        var collapseId = $"collapse_{key}";
        var headingId = $"heading_{key}";

        var categoryTotalStock = group.Sum(x => x.StockQuantity);

        <div class="accordion-item mb-2 shadow-sm border-0">
            <h2 class="accordion-header" id="@headingId">
                <button class="accordion-button collapsed"
                        type="button"
                        data-bs-toggle="collapse"
                        data-bs-target="#@collapseId"
                        aria-expanded="false"
                        aria-controls="@collapseId">
                    <div class="d-flex flex-column flex-md-row w-100 justify-content-between align-items-md-center">
                        <span class="fw-semibold">@group.Key</span>
                        <small class="text-muted">
                            Ürün sayýsý: @group.Count() • Toplam stok: @categoryTotalStock
                        </small>
                    </div>
                </button>
            </h2>
            <div id="@collapseId"
                 class="accordion-collapse collapse"
                 aria-labelledby="@headingId"
                 data-bs-parent="#stockAccordion">
                <div class="accordion-body p-0">
                    <table class="table table-hover table-sm mb-0 align-middle">
                        <thead class="table-light">
                            <tr>
                                <th style="width:35%;">Ürün</th>
                                <th style="width:25%;">Açýklama</th>
                                <th style="width:20%;">Stok Durumu</th>
                                <th style="width:20%;" class="text-end">Güncelle</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in group)
                        {
                            string stockBadgeClass;
                            string stockLabel;

                            if (item.StockQuantity <= 10)
                            {
                                stockBadgeClass = "bg-danger";
                                stockLabel = "Düþük";
                            }
                            else if (item.StockQuantity <= 30)
                            {
                                stockBadgeClass = "bg-warning text-dark";
                                stockLabel = "Orta";
                            }
                            else
                            {
                                stockBadgeClass = "bg-success";
                                stockLabel = "Yüksek";
                            }

                            <tr>
                                <td>
                                    <div class="fw-semibold">@item.Name</div>
                                    @if (!string.IsNullOrWhiteSpace(item.Description))
                                    {
                                    <small class="text-muted d-block text-truncate" style="max-width: 260px;">
                                        @item.Description
                                    </small>
                                    }
                                </td>
                                <td>
                                    @if (string.IsNullOrWhiteSpace(item.Description))
                                    {
                                    <span class="text-muted">Açýklama yok</span>
                                    }
                                    else
                                    {
                                    <span class="text-muted">Detaylý ürün açýklamasý mevcut</span>
                                    }
                                </td>
                                <td>
                                    <span class="badge @stockBadgeClass">
                                        @item.StockQuantity adet • @stockLabel
                                    </span>
                                </td>
                                <td class="text-end">
                                    <form asp-controller="Stock"
                                          asp-action="UpdateStock"
                                          method="post"
                                          class="d-inline-flex align-items-center justify-content-end gap-2">
                                        <input type="hidden" name="id" value="@item.MenuItemId" />
                                        <input type="number"
                                               name="stock"
                                               value="@item.StockQuantity"
                                               class="form-control form-control-sm text-end"
                                               style="width: 90px;"
                                               min="0" />
                                        <button type="submit" class="btn btn-sm btn-primary">
                                            Kaydet
                                        </button>
                                    </form>
                                </td>
                            </tr>
                        }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
    </div>
